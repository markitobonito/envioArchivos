# Sample environment variables for the QUIC File Transfer project

# Flask configuration
FLASK_APP=run.py
FLASK_ENV=production

# QUIC server configuration
QUIC_SERVER_HOST=0.0.0.0
QUIC_SERVER_PORT=9999

# File upload settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16MB

# Tailscale settings (fill these in for production; do NOT commit .env with secrets)
# Copy this file to .env and fill the values before deploying
TAILSCALE_AUTHKEY=
TAILSCALE_API_KEY=
TAILNET=

# Secret key for session management
SECRET_KEY=your_secret_key_here

# Logging configuration
LOG_LEVEL=INFO